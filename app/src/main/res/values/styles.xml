<?xml version="1.0" encoding="utf-8"?>
<resources>

<!-- start style TYPOGRAPHY-->
    <style name="TextAppearance.TipTime.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
    </style>
    
    <style name="TextAppearance.TipTime.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:fontFamily">@font/raleway_medium</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="TextAppearance.TipTime.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>
<!-- end style TYPOGRAPHY-->


    <style name="Widget.TipTime.RadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="android:textAppearance">@style/TextAppearance.TipTime.BodyLarge</item>
    </style>

    <style name="Widget.TipTime.Switch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
<!--        <item name="minHeight">48dp</item>-->
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAppearance">@style/TextAppearance.TipTime.TitleLarge</item>
    </style>

</resources>